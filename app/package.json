{
  "name": "github-playground",
  "version": "0.1.0",
  "scripts": {
    "check-format": "prettier --check to_check",
    "lint": "eslint to_check"
  },
  "devDependencies": {
    "eslint": "8.3.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.25.4",
    "prettier": "2.4.1"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "extends": [
      "airbnb-base"
    ],
    "rules": {
      "no-console": "error"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "printWidth": 80,
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
